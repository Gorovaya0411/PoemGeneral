<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PoemPoet" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
        <item name="android:ems">10</item>
        <item name="fontFamily">@font/reza_zulmi_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <attr format="reference" name="appBarLayoutStyle"/>

    <declare-styleable name="SimpleAppBar">
        <attr name="simple_appbar_title" format="string" />
    </declare-styleable>

    <style name="RedesignedToolbar">
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@color/bg</item>
        <item name="android:fontFamily">@font/reza_zulmi_sans</item>
        <item name="android:textColorPrimary">@color/dark_purple</item>
    </style>

    <style name="ActionBarTheme">
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="Dark.ActionBarTheme" parent="ActionBarTheme">
        <item name="android:textColorPrimary">@color/dark_purple</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorSecondary">@color/dark_purple</item>
        <item name="android:colorControlNormal">@color/dark_purple</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/dark_purple</item>
        <item name="iconTint">@color/dark_purple</item>
    </style>

    <style name="Dark.ActionBarTheme.Transparent" parent="Dark.ActionBarTheme">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/dark_purple</item>
        <item name="colorControlActivated">@color/dark_purple</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dialog.Alert.TestDialogTheme">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/red</item>

    </style>

    <style name="ProfileStyle">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/red</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
        <item name="android:ems">10</item>
    </style>

    <style name="StyleForReadableText">
        <item name="fontFamily">@font/reza_zulmi_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#1f1338</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="StyleForMainText">
        <item name="fontFamily">@font/reza_zulmi_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="EditTextStyleAddPoem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/reza_zulmi_sans</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/reza_zulmi_sans</item>
    </style>
</resources>